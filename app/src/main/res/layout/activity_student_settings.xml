<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StudentSettingsActivity">

    <TextView
        android:id="@+id/tutors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="@dimen/_23sdp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buttonSignOut"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_logout"
        android:tint="#808080"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tutors"
        app:layout_constraintBottom_toBottomOf="@id/tutors"/>

    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:background="@drawable/separator_top"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/buttonSignOut">
    </View>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/personalInformationImage"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_personal_info"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanel"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nextImage1"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_next"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanel"/>

    <TextView
        android:id="@+id/personalInformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/personal_information"
        android:padding="@dimen/_10sdp"
        android:paddingStart="@dimen/_40sdp"
        android:textColor="@color/primary"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/separator_top"
        app:layout_constraintBottom_toBottomOf="@id/personalInformation"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/languagesImage"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_language"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personalInformationImage"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nextImage2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_next"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextImage1"/>

    <TextView
        android:id="@+id/languages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/languages"
        android:padding="@dimen/_10sdp"
        android:paddingStart="@dimen/_40sdp"
        android:textColor="@color/primary"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/personalInformation"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/separator_top"
        app:layout_constraintBottom_toBottomOf="@id/languages"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/meansOfCommunicationImage"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_communication"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languagesImage"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nextImage3"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_next"
        android:tint="@color/primary"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextImage2"/>

    <TextView
        android:id="@+id/meansOfCommunication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/means_of_communication"
        android:padding="@dimen/_10sdp"
        android:paddingStart="@dimen/_40sdp"
        android:textColor="@color/primary"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/languages"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/separator_top"
        app:layout_constraintBottom_toBottomOf="@id/meansOfCommunication"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tutorSearch"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_tutor_search"
        android:tint="#808080"
        android:layout_marginBottom="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/games"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_games"
        android:tint="#808080"
        android:layout_marginBottom="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tutorSearch"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chat"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_message"
        android:tint="#808080"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/games"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/schedule"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_schedule"
        android:tint="#808080"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chat"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settings"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_settings"
        android:tint="#000000"
        android:layout_marginBottom="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/schedule"
        />

    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:background="@drawable/separator"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/tutorSearch">
    </View>


</androidx.constraintlayout.widget.ConstraintLayout>